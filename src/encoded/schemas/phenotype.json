{
    "title": "Phenotype",
    "description": "We should get this from HPO or something --- https://hpo.jax.org/app/download/ontology",
    "id": "/profiles/phenotype.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["phenotype_name", "hpo_id"],
    "identifyingProperties": ["uuid", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/dbxrefs" },
        { "$ref": "mixins.json#/alternative_ids" },
        { "$ref": "mixins.json#/static_embeds" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "status": {
            "default": "released"
        },
        "hpo_id" : {
            "title" : "HPO Identifier",
            "description" : "Identifier of phenotype at hpo.jax.org. E.g. \"HP:0000347\"",
            "type" : "string",
            "uniqueKey": true
        },
        "phenotype_name" : {
            "title" : "Phenotype Name",
            "description": "HPO assigned official term name",
            "type" : "string"
        },
        "hpo_url": {
            "title": "URL",
            "description": "The url that uniquely identifies term - often purl.",
            "type": "string",
            "format": "uri",
            "lookup": 20
        },
        "parents" : {
            "title": "Parent Phenotypes",
            "type" : "array",
            "lookup": 50,
            "items": {
                "title": "Parent",
                "type": "string",
                "linkTo": "Phenotype"
            }
        },
        "slim_terms": {
            "title": "Categories",
            "description": "Categories for grouping phenotypes",
            "type": "array",
            "lookup": 60,
            "items": {
                "title": "Category",
                "type": "string",
                "linkTo": "Phenotype"
            }
        },
        "is_slim_for": {
            "title": "Slim Branch",
            "description": "If the phenotype is a category the value is the slot that the slim is for",
            "type": "string",
            "lookup": 70,
            "enum": ["Phenotypic abnormality"]
        },
        "definition" : {
            "title" : "Definition",
            "description": "Definition of this phenotype",
            "type" : "string",
            "formInput": "textarea",
            "lookup": 30
        },
        "synonyms" : {
            "type" : "array",
            "title" : "Synonyms",
            "lookup": 40,
            "items" : {
                "type" : "string",
                "title": "Synonym"
            }
        },
        "comment" : {
            "type" : "string",
            "title" : "Comment",
            "formInput": "textarea",
            "lookup": 80
        },
        "suggested_replacements": {
            "title": "Suggested Replacement Phenotypes",
            "description": "Phenotypes that are possible suggestions as replacement for this obsolete Phenotype",
            "comment": "NOTE: this should only be populated if Phenotype is obsolete",
            "type": "array",
            "lookup": 90,
            "items": {
                "title": "Suggestion",
                "type": "string",
                "linkTo": "Phenotype"
            }
        }
    },
    "facets": {
        "slim_terms.display_title": {
            "title": "Category"
        }
    },
    "columns": {
        "hpo_id": {
            "title": "HPO ID"
        },
        "slim_terms.display_title": {
            "title": "Category"
        },
        "hpo_url": {
            "title": "External Link",
            "default_hidden": true
        }
    }
}
