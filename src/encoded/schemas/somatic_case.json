{
    "title": "Somatic Case",
    "id": "/profiles/somatic_case.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "project",
        "institution"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/ingestion_ids"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/attribution"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "SC"
        },
        "case_id": {
            "title": "Case ID",
            "description": "An identifier for this case",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "description": "Description of the case",
            "type": "string"
        },
        "individual": {
            "title": "Individual",
            "description": "The individual who comprises the case",
            "type": "string",
            "linkTo": "Individual"
        }
    },
    "facets": {
        "project.display_title": {
            "title": "Project",
            "order": 1
        },
        "individual.individual_id": {
            "title": "Individual ID",
            "grouping": "Individual",
            "order": 2
        },
        "individual.sex": {
            "title": "Sex (User-Submitted)",
            "grouping": "Individual",
            "order": 3
        },
        "status": {
            "title": "Status",
            "order": 6
        }
    },
    "columns": {
        "display_title": {
            "title": "Case ID",
            "sort_fields": [
                {
                    "field": "case_title",
                    "title": "Case Title"
                },
                {
                    "field": "accession",
                    "title": "Case Accession (CGAP ID)"
                },
                {
                    "field": "date_created",
                    "title": "Case Accession Date"
                },
                {
                    "field": "aliases",
                    "title": "User-Defined Alias"
                },
                {
                    "field": "last_modified.date_modified",
                    "title": "Last Modified Date"
                }
            ]
        },
        "individual": {
            "title": "Individual ID",
            "description": "Proband Individual of this Case",
            "sort_fields": [
                {
                    "field": "individual.individual_id",
                    "title": "Individual ID"
                },
                {
                    "field": "individual.accession",
                    "title": "Individual Accession (CGAP ID)"
                },
                {
                    "field": "individual.date_created",
                    "title": "Individual Accession Date"
                },
                {
                    "field": "individual.aliases",
                    "title": "User-Defined Alias"
                }
            ]
        }
    }
}
