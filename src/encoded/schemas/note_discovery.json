{
    "title": "Discovery Note",
    "description": "Note containing a gene/variant discovery-oriented interpretation of a VariantSample, Variant, or Gene",
    "id": "/profiles/note_discovery.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "institution",
        "project"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "note.json#/properties"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "gene_candidacy": {
            "title": "Gene Candidacy",
            "description": "Candidacy level for Gene Discovery",
            "type": "string",
            "enum": [
                "Tier 1 - Novel gene and phenotype",
                "Tier 1 - Novel gene for known phenotype",
                "Tier 1 - Phenotype expansion",
                "Tier 1 - Phenotype not delineated",
                "Tier 1 - Novel mode of inheritance",
                "Tier 1 - Known gene, new phenotype",
                "Tier 2 - Novel gene and phenotype",
                "Tier 2 - Novel gene for known phenotype",
                "Tier 2 - Phenotype expansion",
                "Tier 2 - Phenotype not delineated",
                "Tier 2 - Known gene, new phenotype",
                "Known gene for phenotype"
            ]
        },
        "variant_candidacy": {
            "title": "Variant Candidacy",
            "description": "Candidacy level for Variant Discovery",
            "type": "string",
            "enum": [
                "Strong candidate",
                "Moderate candidate",
                "Weak candidate",
                "Not a candidate"
            ]
        },
        "previous_note": {
            "linkTo": "NoteDiscovery"
        }
    },
    "facets": {
        "gene_candidacy": {
            "title": "Gene Candidacy"
        },
        "variant_candidacy": {
            "title": "Variant Candidacy"
        }
    },
    "columns": {
        "gene_candidacy": {
            "title": "Gene Candidacy"
        },
        "variant_candidacy": {
            "title": "Variant Candidacy"
        }
    }
}
