{
    "title": "Cohort Analysis",
    "description": "Analysis object used on cohort samples",
    "id": "/profiles/cohort_analysis.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "project",
        "institution"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases",
        "accession"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "abstract_analysis.json#/properties"
        }
    ],
    "mixinFacets": [
        {
            "$ref": "abstract_analysis.json#/facets"
        }
    ],
    "mixinColumns": [
        {
            "$ref": "abstract_analysis.json#/columns"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "CA"
        },
        "control_samples": {
            "title": "Control Samples",
            "description": "Control samples used in a cohort analysis",
            "type": "array",
            "items": {
                "title": "Sample",
                "type": "string",
                "linkTo": "Sample"
            }
        },
        "case_samples": {
            "title": "Case Samples",
            "description": "Case samples used in a cohort analysis",
            "type": "array",
            "items": {
                "title": "Sample",
                "type": "string",
                "linkTo": "Sample"
            }
        }
    }
}
