{
    "title": "Quality Metric for Bam QC",
    "description": "Schema for reporting the specific calculation of an quality metrics",
    "id": "/profiles/quality_metric_bamqc.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "project",
        "institution"
    ],
    "additionalProperties": true,
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "mixinProperties": [
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/static_embeds"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "quality_metric.json#/properties"
        }
    ],
    "mixinFacets": [
        {
            "$ref": "mixins.json#/facets_common"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "coverage": {
            "title": "Coverage",
            "description": "Average read coverage",
            "type": "string"
        },
        "sample": {
            "title": "Sample",
            "description": "Associated sample",
            "type": "string"
        },
        "mapping stats": {
            "title": "Mapping statistics",
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "read length": {
                    "title": "Read Length",
                    "type": "integer"
                },
                "total reads": {
                    "title": "Total Reads",
                    "type": "integer"
                },
                "one mate mapped": {
                    "title": "One Mate Mapped",
                    "type": "integer"
                },
                "both mates mapped": {
                    "title": "Both Mates Mapped",
                    "type": "integer"
                },
                "neither mate mapped": {
                    "title": "Neither Mate Mapped",
                    "type": "integer"
                }
            }
        }
    },
    "facets": {
        "overall_quality_status": {
            "title": "Overall Quality"
        }
    },
    "columns": {
        "overall_quality_status": {
            "title": "Overall Quality",
            "default_hidden": true
        }
    }
}
