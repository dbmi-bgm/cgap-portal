{
    "title": "Interpretation Note",
    "description": "Note containing interpretation of a VariantSample, Variant, or Gene",
    "id": "/profiles/note_interpretation.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "institution",
        "project"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "note.json#/properties"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "2",
            "notes": "v2 renamed approved_date to date_approved in note.json"
        },
        "classification": {
            "title": "Classification",
            "description": "Significance classification indicated by this note",
            "type": "string",
            "enum": [
                "Benign",
                "Likely benign",
                "Uncertain significance",
                "Likely pathogenic",
                "Pathogenic"
            ]
        },
        "acmg_guidelines": {
            "title": "ACMG Guidelines Invoked",
            "type": "array",
            "items": {
                "title": "ACMG Guideline",
                "type": "string",
                "enum": [
                    "PVS1",
                    "PS1",
                    "PS2",
                    "PS3",
                    "PS4",
                    "PM1",
                    "PM2",
                    "PM3",
                    "PM4",
                    "PM5",
                    "PM6",
                    "PP1",
                    "PP2",
                    "PP3",
                    "PP4",
                    "PP5",
                    "BA1",
                    "BS1",
                    "BS2",
                    "BS3",
                    "BS4",
                    "BP1",
                    "BP2",
                    "BP3",
                    "BP4",
                    "BP5",
                    "BP6",
                    "BP7"
                ]
            }
        },
        "conclusion": {
            "title": "Conclusion",
            "description": "concluding statement summarizing this interpretation",
            "type": "string"
        },
        "previous_note": {
            "linkTo": "NoteInterpretation"
        },
        "superseding_note": {
            "linkTo": "NoteInterpretation"
        }
    },
    "facets": {
        "classification": {
            "title": "Classification"
        }
    },
    "columns": {
        "classification": {
            "title": "Classification"
        }
    }
}
