{
    "title": "Sample",
    "description": "A sample from an individual",
    "id": "/profiles/sample.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "project", "institution"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/supplementary_files" },
        { "$ref": "mixins.json#/static_embeds" },
        { "$ref": "mixins.json#/accession"}
    ],
    "properties": {
        "accession" : {
            "accessionType" : "SA"
        },
        "workup_type": {
            "title": "Workup Type",
            "type": "string",
            "enum": [
                "WGS",
                "WES",
                "Sanger"
            ]
        },
        "individual": {
            "title": "Individual",
            "description": "Individual this sample is derived from",
            "type": "string",
            "linkTo": "Individual"
        },
        "specimen_type": {
            "title": "Specimen Type",
            "type": "string",
            "suggested_enum": [
                "blood",
                "saliva"
            ]
        },
        "accepted_or_rejected": {
            "title": "Accepted/Rejected",
            "type": "string",
            "description": "Whether the specimen was accepted or rejected due to quality or other reasons",
            "enum": [
                "accepted",
                "rejected"
            ]
        },
        "rejection_reason": {
            "title": "Reason for Rejection",
            "type": "string",
            "description": "If specimen was rejected, the reason for rejection"
        },
        "specimen_notes": {
            "title": "Specimen Notes",
            "type": "string"
        },
        "specimen_collection_date": {
            "title": "Specimen Collection Date",
            "description": "Date of specimen collection",
            "type": "string",
            "format": "date"
        },
        "completed_processes": {
            "title": "Completed data processing",
            "type": "array",
            "items": {
                "title": "Completed process",
                "type": "string"
            }
        },
        "specimen_accession": {
            "title": "Specimen Accession",
            "description": "Accession of specimen from sequencing lab",
            "type": "string",
            "uniqueKey": true
        },
        "specimen_accession_date": {
            "title": "Specimen Accession Date",
            "description": "Date of specimen accessioning by sequencing lab",
            "type": "string",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ]
        },
        "requisition_form": {
            "title": "Requisition Form",
            "type": "string",
            "linkTo": "Document"
        },
        "date_received": {
            "title": "Date Received in Sequencing Lab",
            "type": "string",
            "anyOf": [
                {"format": "date-time"},
                {"format": "date"}
            ]
        },
        "sequence_id": {
            "title": "Sequence Identifier",
            "type": "string"
        },
        "protocol": {
            "title": "Reference Protocol",
            "description": "Reference Protocol Document.",
            "type": "string",
            "linkTo": "Document"
        },
        "files": {
            "title": "Fastq Files",
            "description": "Information about the data files associated with the sample.",
            "type": "array",
            "items": {
                "title": "File",
                "description": "File metadata.",
                "type": "string",
                "linkTo": "File"
            }
        },
        "cram_files": {
            "title": "CRAM Files",
            "description": "Input alignment files.",
            "type": "array",
            "items": {
                "title": "CRAM File",
                "description": "File metadata.",
                "type": "string",
                "linkTo": "FileProcessed"
            }
        },
        "processed_files": {
            "title": "Processed Files",
            "description": "Processed files that are derived from files in this sample.",
            "type": "array",
            "items": {
                "title": "Processed File",
                "description": "File metadata.",
                "type": "string",
                "linkTo": "FileProcessed"
            }
        },
        "reference_files": {
            "title": "Reference Files",
            "description": "Reference files associated with this sample (ex. file of sequencing barcodes).",
            "type": "array",
            "items": {
                "title": "Reference File",
                "description": "File metadata.",
                "type": "string",
                "linkTo": "FileReference"
            }
        }
    }
}
