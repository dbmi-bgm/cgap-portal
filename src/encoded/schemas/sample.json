{
    "title": "Sample",
    "description": "A sample (library) from an individual",
    "id": "/profiles/sample.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [ "project", "institution"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/attribution" },
        { "$ref": "mixins.json#/supplementary_files" },
        { "$ref": "mixins.json#/static_embeds" },
        { "$ref": "mixins.json#/accession"}
    ],
    "properties": {
        "accession" : {
            "accessionType" : "SA"
        },
        "schema_version": {
            "default": "1"
        },
        "workup_type": {
            "title": "Workup Type",
            "type": "string",
            "enum": [
                "WGS",
                "WES",
                "Sanger"
            ]
        },
        "library_ids": {
            "title": "Library IDs",
            "type": "array",
            "description": "The identifiers for this sample/library",
            "items": {
                "title": "Library ID",
                "type": "string"
            }
        },
        "specimen": {
            "title": "Specimen",
            "type": "string",
            "description": "The specimen this sample/library is derived from",
            "linkTo": "Specimen"
        },
        "completed_processes": {
            "title": "Completed data processing",
            "type": "array",
            "items": {
                "title": "Completed process",
                "type": "string"
            }
        },
        "sequence_id": {
            "title": "Sequence Identifier",
            "type": "string"
        },
        "protocol": {
            "title": "Reference Protocol",
            "description": "Reference Protocol Document.",
            "type": "string",
            "linkTo": "Document"
        },
        "note_from_sequencing_lab": {
            "title": "Note from sequencing lab",
            "type": "string"
        },
        "files": {
            "title": "Fastq Files",
            "description": "Information about the data files associated with the sample.",
            "type": "array",
            "items": {
                "title": "File",
                "description": "File metadata.",
                "type": "string",
                "linkTo": "File"
            }
        },
        "cram_files": {
            "title": "CRAM Files",
            "description": "Input alignment files.",
            "type": "array",
            "items": {
                "title": "CRAM File",
                "description": "File metadata.",
                "type": "string",
                "linkTo": "FileProcessed"
            }
        },
        "processed_files": {
            "title": "Processed Files",
            "description": "Processed files that are derived from files in this sample.",
            "type": "array",
            "items": {
                "title": "Processed File",
                "description": "File metadata.",
                "type": "string",
                "linkTo": "FileProcessed"
            }
        },
        "reference_files": {
            "title": "Reference Files",
            "description": "Reference files associated with this sample (ex. file of sequencing barcodes).",
            "type": "array",
            "items": {
                "title": "Reference File",
                "description": "File metadata.",
                "type": "string",
                "linkTo": "FileReference"
            }
        }
    }
}
