{
    "title": "Case",
    "id": "/profiles/case.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["project", "institution"],
    "identifyingProperties": ["uuid", "accession", "aliases"],
    "additionalProperties": false,
    "mixinProperties": [
        { "$ref": "mixins.json#/schema_version" },
        { "$ref": "mixins.json#/accession" },
        { "$ref": "mixins.json#/aliases" },
        { "$ref": "mixins.json#/uuid" },
        { "$ref": "mixins.json#/submitted" },
        { "$ref": "mixins.json#/modified" },
        { "$ref": "mixins.json#/status" },
        { "$ref": "mixins.json#/attribution" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession" : {
            "accessionType" : "CA"
        },
        "case_id": {
            "title": "Case ID",
            "description": "An identifier for this case",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "description": "Description of the case",
            "type": "string"
        },
        "individual": {
            "title": "Individual",
            "description": "The individual who comprises the case",
            "type": "string",
            "linkTo": "Individual"
        },
        "sample_processing": {
            "title": "Sample Processing",
            "description": "Downstream analysis performed on relevant sample",
            "type": "string",
            "linkTo": "SampleProcessing"
        },
        "report": {
            "title": "Report",
            "description": "The report generated from this case",
            "type": "string",
            "linkTo": "Report"
        }
    },
    "facets" : {
        "individual.uuid": {
            "title": "UUID",
            "grouping": "Individual"
        },
        "individual.sex" : {
            "title" : "Gender",
            "grouping": "Individual"
        },
        "individual.birth_year" : {
            "title" : "Birth Year",
            "notes": "Currently will show up as terms; need to change to date range once able to",
            "grouping": "Individual"
        },
        "individual.disorders" : {
            "title" : "Disorders",
            "grouping": "Individual"
        },
        "individual.phenotypic_features" : {
            "title" : "Phenotypic Features",
            "grouping": "Individual"
        }
    },
    "columns" : {
        "individual" : {
            "notes" : "display_title is hardcoded to always be present and first column.",
            "title" : "Individual",
            "sort_fields" : [
                { "field" : "accession", "title" : "Accession (CGAP ID)" },
                { "field" : "aliases", "title": "User-Defined Alias" },
                { "field" : "uuid", "title": "UUID"}
            ]
        },
        "display_title" : {
            "title" : "Case",
            "default_hidden" : true
        },
        "sample_processing": {
            "title": "Sample",
            "notes": "all samples will be included here, need to map sample to current individual in case search view"
        },
        "sample_processing.sample": {
            "title": "Sequencing",
            "sort_fields" : [
                { "field" : "specimen_type", "title": "Specimen Type" }
            ]
        },
        "sample_processing.completed_processes" :  {
            "title": "Bioinformatics"
        }
    }
}
