{
    "title": "Quality Metric for VCF files, Peddy",
    "description": "Schema for reporting the specific calculation of an quality metrics, Peddy",
    "id": "/profiles/quality_metric_peddyqc.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "project",
        "institution"
    ],
    "additionalProperties": false,
    "identifyingProperties": [
        "uuid",
        "aliases"
    ],
    "mixinProperties": [
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/static_embeds"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "quality_metric.json#/properties"
        },
        {
            "$ref": "mixins.json#/associated_case"
        }
    ],
    "mixinFacets": [
        {
            "$ref": "mixins.json#/facets_common"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "ancestry and sex prediction": {
            "title": "Ancestry and Sex Prediction",
            "type": "array",
            "items": {
                "title": "Ancestry and Sex Prediction",
                "type": "object",
                "properties": {
                    "name": {
                        "title": "Name",
                        "description": "Sample name that corresponds to this prediction",
                        "type": "string"
                    },
                    "predicted sex": {
                        "title": "Predicted Sex",
                        "description": "Sex predicted from reads in this sample",
                        "type": "string"
                    },
                    "predicted ancestry": {
                        "title": "Predicted Ancestry",
                        "description": "Ancestry predicted by reads in this sample",
                        "type": "string"
                    }
                }
            }
        }
    },
    "facets": {
        "overall_quality_status": {
            "title": "Overall Quality"
        }
    },
    "columns": {
        "overall_quality_status": {
            "title": "Overall Quality",
            "default_hidden": true
        }
    }
}
