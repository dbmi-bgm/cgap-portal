{
    "title": "Cohort",
    "id": "/profiles/cohort.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "project",
        "institution"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/attribution"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "2"
        },
        "accession": {
            "accessionType": "CO"
        },
        "title": {
            "title": "Title",
            "description": "Title for the cohort",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "description": "Description of the cohort",
            "type": "string"
        },
        "sample_processings": {
            "title": "Cohort Analyses",
            "description": "Collection of analyses for the cohort",
            "type": "array",
            "items": {
                "title": "Cohort Analysis",
                "description": "An analysis for the cohort",
                "type": "string",
                "linkTo": "SampleProcessing"
            }
        }
    }
}
