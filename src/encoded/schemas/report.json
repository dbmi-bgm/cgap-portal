{
    "title": "Report",
    "id": "/profiles/report.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "project",
        "institution"
    ],
    "identifyingProperties": [
        "uuid",
        "accession",
        "aliases"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/attribution"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "RE"
        },
        "description": {
            "title": "Description",
            "description": "Description of the report",
            "type": "string"
        },
        "variant_samples": {
            "title": "Variant Samples",
            "description": "The variant samples included in this report",
            "type": "array",
            "items": {
                "title": "Variant Sample",
                "description": "A variant sample included in this report",
                "type": "string",
                "linkTo": "VariantSample"
            }
        },
        "structural_variant_samples": {
            "title": "Structural Variant Samples",
            "description": "The CNV/SV samples included in this report",
            "type": "array",
            "items": {
                "title": "Structural Variant Sample",
                "description": "A structural variant sample included in this report",
                "type": "string",
                "linkTo": "StructuralVariantSample"
            }
        },
        "indication": {
            "title": "Indication",
            "type": "string"
        },
        "analysis_performed": {
            "title": "Analysis / Tests Performed",
            "type": "string"
        },
        "result_summary": {
            "title": "Result Summary",
            "type": "string"
        },
        "recommendations": {
            "title": "Recommendations",
            "type": "string"
        },
        "methodology": {
            "title": "Methodology",
            "type": "string"
        },
        "references": {
            "title": "References",
            "type": "string"
        },
        "extra_notes": {
            "title": "Additional Notes",
            "description": "Notes for this report that are not attached to the Variant Samples",
            "type": "string"
        },
        "findings_texts": {
            "title": "Finding Texts",
            "descriptions": "Text or notes saved per finding tag and its related Variant Samples",
            "type": "object",
            "additionalProperties": true
        }
    }
}
