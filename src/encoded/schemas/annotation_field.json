{
    "title": "Annotation Field",
    "description": "Schema for submitting an annotation field",
    "id": "/profiles/annotation_field.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["vcf_name", "field_type"],
    "identifyingProperties": ["uuid", "aliases", "vcf_name"],
    "additionalProperties": false,
    "mixinProperties": [
      { "$ref": "mixins.json#/schema_version" },
      { "$ref": "mixins.json#/uuid" },
      { "$ref": "mixins.json#/aliases" },
      { "$ref": "mixins.json#/submitted" },
      { "$ref": "mixins.json#/modified" },
      { "$ref": "mixins.json#/status" },
      { "$ref": "mixins.json#/attribution" },
      { "$ref": "mixins.json#/notes" },
      { "$ref": "mixins.json#/static_embeds" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "no": {
            "title": "Number",
            "description": "Number on mapping table",
            "type": "integer"
        },
        "vcf_name": {
            "title": "Field Name on VCF",
            "description": "Original name of the annotaion field name on vcf file",
            "type": "string"
        },
        "source_name": {
            "title": "Source Name",
            "description": "Latest source name",
            "type": "string"
        },
        "source_version": {
            "title": "Source Version (v0.2)",
            "description": "Latest source version",
            "type": "string"
        },
        "sub_embedding_group": {
            "title": "Sub-embedding group",
            "description": "If field belongs to a sub embedded object, add field name to that object",
            "type": "string"
        },
        "field_type": {
            "title": "Field type",
            "description": "Field type, number, integer, string",
            "type": "string",
            "enum": [
                "string",
                "number",
                "integer",
                "boolean"
            ]
        },
        "is_list": {
            "title": "Is List",
            "type": "boolean",
            "description": "Whether the field is a list or not",
            "default": false
        },
        "max_size": {
            "title": "Max Size (bytes)",
            "type": "integer",
            "description": "Maximum number of bytes this field can hold"
        },
        "schema_description": {
            "title": "Description to be used in the variant schema for the field",
            "description": "description inception",
            "type": "string"
        },
        "value_example": {
            "title": "Example Value for this field",
            "description": "Example Value for this field, stored as text",
            "type": "string"
        }
    },
    "facets": {
        "field_type": {
            "title": "Type"
        },
        "source_name": {
            "title": "Source"
        }
    },
    "columns": {
        "schema_title": {
            "title": "Field name"
        },
        "field_type": {
            "title": "Field type"
        },
        "source_name": {
            "title": "Source"
        }
    }
}
