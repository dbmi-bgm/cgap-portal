{
    "title": "Annotation Field",
    "description": "Schema for submitting an annotation field",
    "id": "/profiles/annotation_field.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": ["field_name", "lab", "award"],
    "identifyingProperties": ["uuid", "field_name"],
    "additionalProperties": false,
    "mixinProperties": [
      { "$ref": "mixins.json#/schema_version" },
      { "$ref": "mixins.json#/uuid" },
      { "$ref": "mixins.json#/aliases" },
      { "$ref": "mixins.json#/submitted" },
      { "$ref": "mixins.json#/modified" },
      { "$ref": "mixins.json#/status" },
      { "$ref": "mixins.json#/attribution" },
      { "$ref": "mixins.json#/notes" }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "field_name": {
            "title": "Field Name",
            "description": "Name of the annotaion field name",
            "type": "string",
            "uniqueKey": true
        },
        "is_list": {
          "title": "NCBI Entrez Gene ID",
          "type": "boolean"
        },
        "enum": {
            "title": "Enum list",
            "description": "If field is list, you can define set of values",
            "type": ""
        },
        "field_type": {
            "title": "Field type",
            "description": "Field type, number, integer, string",
            "type": "string",
            "enum": [
                "string",
                "number",
                "integer",
                "boolean"
            ]
        },
