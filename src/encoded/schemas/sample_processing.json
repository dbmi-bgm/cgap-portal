{
    "title": "Sample Processing",
    "description": "Analysis object used on samples",
    "id": "/profiles/sample_processing.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "required": [
        "project",
        "institution"
    ],
    "identifyingProperties": [
        "uuid",
        "aliases",
        "accession"
    ],
    "additionalProperties": false,
    "mixinProperties": [
        {
            "$ref": "mixins.json#/schema_version"
        },
        {
            "$ref": "mixins.json#/uuid"
        },
        {
            "$ref": "mixins.json#/aliases"
        },
        {
            "$ref": "mixins.json#/submitted"
        },
        {
            "$ref": "mixins.json#/modified"
        },
        {
            "$ref": "mixins.json#/status"
        },
        {
            "$ref": "mixins.json#/attribution"
        },
        {
            "$ref": "mixins.json#/tags"
        },
        {
            "$ref": "mixins.json#/static_embeds"
        },
        {
            "$ref": "mixins.json#/submitted_files"
        },
        {
            "$ref": "mixins.json#/meta_workflow_runs"
        },
        {
            "$ref": "mixins.json#/accession"
        },
        {
            "$ref": "mixins.json#/identifier"
        }
    ],
    "properties": {
        "schema_version": {
            "default": "1"
        },
        "accession": {
            "accessionType": "SP"
        },
        "title": {
            "title": "Title",
            "description": "Title for the analysis",
            "type": "string"
        },
        "description": {
            "title": "Description",
            "description": "Description of the analysis",
            "type": "string"
        },
        "analysis_type": {
            "title": "Analysis Type",
            "description": "The type of analysis performed, e.g. trio",
            "type": "string",
            "suggested_enum": [
                "WGS",
                "WGS-Trio",
                "WGS-Group",
                "WGS-Upstream only",
                "WES",
                "WES-Trio",
                "WES-Group",
                "Custom"
            ]
        },
        "analysis_version": {
            "title": "Analysis Version",
            "description": "The version of the pipeline that is intended to be run",
            "type": "string"
        },
        "samples": {
            "title": "Samples",
            "description": "Samples used in a case analysis",
            "type": "array",
            "items": {
                "title": "Sample",
                "type": "string",
                "linkTo": "Sample"
            }
        },
        "control_samples": {
            "title": "Samples",
            "description": "Control samples used in a cohort analysis",
            "type": "array",
            "items": {
                "title": "Sample",
                "type": "string",
                "linkTo": "Sample"
            }
        },
        "case_samples": {
            "title": "Samples",
            "description": "Case samples used in a cohort analysis",
            "type": "array",
            "items": {
                "title": "Sample",
                "type": "string",
                "linkTo": "Sample"
            }
        },
        "families": {
            "title": "Families",
            "description": "Families the analysis is on",
            "type": "array",
            "items": {
                "title": "Family",
                "description": "A family in the analysis",
                "type": "string",
                "linkTo": "Family"
            }
        },
        "sample_processed_files": {
            "title": "Sample Processed Files",
            "description": "Processed results for each sample",
            "type": "array",
            "items": {
                "title": "Sample Processed File",
                "type": "object",
                "properties": {
                    "sample": {
                        "title": "Sample",
                        "type": "string",
                        "linkTo": "Sample"
                    },
                    "processed_files": {
                        "title": "Processed Files",
                        "description": "Processed files that are specific for each sample.",
                        "type": "array",
                        "items": {
                            "title": "Processed File",
                            "type": "string",
                            "linkTo": "FileProcessed"
                        }
                    }
                }
            }
        },
        "processed_files": {
            "title": "Processed Files",
            "description": "Processed files that are combined results for the sample analysis.",
            "type": "array",
            "items": {
                "title": "Processed File",
                "type": "string",
                "linkTo": "FileProcessed"
            }
        },
        "completed_processes": {
            "title": "Completed data processing",
            "type": "array",
            "items": {
                "title": "Completed process",
                "type": "string"
            }
        }
    }
}
