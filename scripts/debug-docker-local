if [ $# -ne 0 ]; then

    echo "Syntax: $0 [ --help ]"
    exit 1
    
fi

container=`docker ps | grep '.*_app-portal' | cut -d ' ' -f 1`

if [ -z "${container}" ]; then
    echo "No local cgap-portal docker container seems to be running."
else
    echo "Debugging local portal docker container ${container} ..."
    docker exec -it "${container}" /bin/bash
    echo "Done debugging local portal docker container ${container}."
fi
